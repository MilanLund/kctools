extends layout

block content
	.page-header
		h3 Projects

	if projects.length
		ul
			for project in projects
				li
					a(href='/projects/' + project._id)= project.name + ' '
					a(href='/projects/delete/' + project._id) Delete
	if !projects.length
		p No projects. 
	a(href='/projects/new') Add a new project